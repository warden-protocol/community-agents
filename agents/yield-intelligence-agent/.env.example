# ==============================================================================
# WARDEN YIELD INTELLIGENCE AGENT - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# LLM PROVIDER CONFIGURATION
# ------------------------------------------------------------------------------

# OpenAI (Option 1)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (Option 2 - Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Select provider: "openai" or "anthropic"
LLM_PROVIDER=anthropic

# ------------------------------------------------------------------------------
# EXTERNAL API CONFIGURATION
# ------------------------------------------------------------------------------

# DeFiLlama - Free, no API key required
DEFILLAMA_BASE_URL=https://yields.llama.fi

# LI.FI Bridge Aggregator - Free tier at https://li.fi/
LIFI_API_KEY=
LIFI_BASE_URL=https://li.quest/v1

# Blocknative Gas Oracle - Free tier at https://www.blocknative.com/
BLOCKNATIVE_API_KEY=

# ------------------------------------------------------------------------------
# AGENT BEHAVIOR SETTINGS
# ------------------------------------------------------------------------------

# Risk tolerance default: conservative, moderate, aggressive
DEFAULT_RISK_TOLERANCE=moderate

# Minimum TVL (USD) for pools to be considered safe
MIN_TVL_USD=100000

# Maximum recommendations to return
MAX_RECOMMENDATIONS=10

# Cache duration in seconds
CACHE_TTL_SECONDS=300

# Maximum chains to query in parallel
MAX_PARALLEL_CHAINS=10

# ------------------------------------------------------------------------------
# SUPPORTED CHAINS
# ------------------------------------------------------------------------------

SUPPORTED_CHAINS=ethereum,arbitrum,optimism,polygon,base,avalanche,bsc

# ------------------------------------------------------------------------------
# LANGSMITH TRACING (Optional but recommended for debugging)
# ------------------------------------------------------------------------------

LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=warden-yield-agent

# ------------------------------------------------------------------------------
# SERVER CONFIGURATION (Self-hosted deployment)
# ------------------------------------------------------------------------------

HOST=0.0.0.0
PORT=8000
DEBUG=false
